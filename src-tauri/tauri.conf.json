{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "sql-book",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "shell": {
                "open": true,
                "sidecar": true,
                "scope": [{ "name": "bin/sqlite3", "sidecar": true, "args": true }]
            },
            "os": {
                "all": true
            },
            "dialog": {
                "open": true,
                "save": true
            },
            "fs": {
                "readFile": true,
                "writeFile": true
            }
        },
        "bundle": {
            "active": true,
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.victor.dev",
            "targets": "all",
            "externalBin": ["bin/sqlite3"]
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "SQLite Book",
                "width": 800,
                "height": 600
            }
        ]
    }
}
